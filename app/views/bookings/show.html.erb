<%= link_to '<i class="material-icon right"></i>Logout'.html_safe, logout_path(@user), class: "waves-effect waves-light btn" %>

<div class="row">
	<div class="col s6 m6">
	  <div class="card blue-grey darken-1">
	    <div class="card-content white-text">
	      <span class="card-title">User: <%= current_user.name %></span>
	      <span class="card-title">Room: <%= @booking.name %></span>
	      <p>start_time: <%= @booking.start_time %></p>
	      <p>end_time: <%= @booking.end_time %></p>
	      <p>Status: <%= @booking.status %></p>
	    </div>
	  </div>
	  <%= link_to '<i class="material-icon right"></i>Edit'.html_safe, edit_booking_path(@booking,:room_id => @room,:name => @booking.name), class: "waves-effect waves-light btn" %>
	  <%= link_to '<i class="material-icon right"></i>Rooms'.html_safe, rooms_path, class: "waves-effect waves-light btn" %>
	  <%= link_to 'Destroy', @booking, method: :delete, data: { confirm: 'Are you sure?'}, class: "waves-effect waves-light btn" %>
	</div>
</div>




