<%= link_to '<i class="material-icon right"></i>Rooms'.html_safe,rooms_path, class: "waves-effect waves-light btn" %>


<div class="row">
	<div class="col s12">
		<h3 class="center-align">Booking</h3>
	</div>
</div>

<div class="row">
	<%= @bookings.each do |b|%>
	    <div class="col s6 m6">
	      <div class="card blue-grey darken-1">
	        <div class="card-content white-text">
	          <% @room = Room.where(:id => b.room_id).first%>
	          <span class="card-title">Room_name: <%= @room.name %></span>
	          <p>User: <%= b.name %></p>
	          <p>start_time: <%= b.start_time%></p>
	          <p>end_time: <%= b.end_time%></p>
	          <p>Status: <%= b.status%></p>
	        </div>
	        <div class="card-action">
	          <a href="booking_index_path">View Profile</a>
	       	</div>
	      </div>
	    </div>
	<% end %>
</div>
